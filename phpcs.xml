<?xml version="1.0"?>
<ruleset name="filter_ally">
    <description>PHPCS rules for filter_ally</description>

    <!-- Moodle coding standard -->
    <rule ref="moodle"/>

    <!-- What to scan -->
    <file>.</file>

    <!-- What to ignore -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/.moodledata/*</exclude-pattern>
</ruleset>
